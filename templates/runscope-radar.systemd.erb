[Unit]
Description=Runscope Radar Agent
After=network.target

[Service]
User=<%= scope.lookupvar('runscope_radar::user') %>
Group=<%= scope.lookupvar('runscope_radar::group') %>
ExecStart=<%= scope.lookupvar('runscope_radar::install_dir') %>/<%= scope.lookupvar('runscope_radar::install_binary') %> -f <%= scope.lookupvar('runscope_radar::config_dir') %>/radar.conf

[Install]
WantedBy=multi-user.target
